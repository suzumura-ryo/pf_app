<% provide(:title, @user.nickname) %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= @user.nickname %>
      </h1>
    </section>
  </aside>
  <div class="col-md-8">
    <% if @user.recipes.any? %>
      <h3>レシピ一覧 (<%= @user.recipes.count %>)</h3>
      <ol class="recipes">
        <%= render @recipes %>
      </ol>
      <%= will_paginate @recipes %>
    <% end %>
  </div>
</div>