<% provide(:title, @user.nickname) %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= @user.nickname %>
      </h1>
    </section>
  </aside>
  <div class="col-md-8">
    <% if @user.procedures %>
      <ol class="procedures">
        <%= render @procedures %>
      </ol>
      <%= will_paginate @procedures %>
    <% end %>
    <h3>レシピ一覧 (<%= @user.procedures.count %>)</h3>

  </div>
</div>